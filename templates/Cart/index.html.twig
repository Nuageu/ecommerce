{% extends 'base.html.twig' %}

{% block title %}Votre Panier
{% endblock %}

{% block body %}
	<h1>
		Votre Panier</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantit√©</th>
				<th>Total</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{item.product.name}}</td>
					<td>{{item.product.price  }}
						&euro;</td>
					<td>{{item.qty}}</td>
					<td>{{item.total }}
						&euro;</td>
					<td>
						<a href="{{path('cart_delete', {'id': item.product.id})}}" class="btn btn-sm btn-danger">
							<i class="fas fa-trash"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">
					Total :</td>
				<td colspan="2">{{total }}
					&euro;</td>
			</tr>
		</tfoot>
	</table>
{% endblock %}
